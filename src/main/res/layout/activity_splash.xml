<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"

    tools:context="tr.net.rota.aeyacin.rotamobil.ui.activities.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="horizontal"
            android:visibility="invisible"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80808080"
                android:text="R"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="100dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights,SpUsage" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80808080"
                android:text="T"
                android:textColor="#000000"
                android:textSize="100dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80808080"
                android:text="A"
                android:textColor="#000000"
                android:textSize="100dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />


        </LinearLayout>

        <LinearLayout
            android:background="#55FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.34">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rota_logo"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                tools:ignore="NestedWeights,UselessLeaf">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                tools:ignore="UselessLeaf">
<!--
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi_first"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:indicatorColor="@color/colorAccent_rota_clicked"
                    app:indicatorName="BallClipRotatePulseIndicator"
                    />
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                tools:ignore="UselessLeaf">
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
