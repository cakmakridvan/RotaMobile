<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:padding="4dp"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="RtlHardcoded">

                <tr.net.rota.aeyacin.rotamobil.ui.view.VerticalTextView3
                    android:id="@+id/vehicle_ignition_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_margin="0sp"
                    android:gravity="center"
                    android:minWidth="150sp"
                    android:padding="1sp"
                    android:text="@string/ignition_close_text"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1"
                    tools:ignore="DisableBaselineAlignment">


                    <TextView
                        android:id="@+id/vehicle_plate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="1sp"
                        android:layout_weight="0.35"
                        android:background="@drawable/plate_border"
                        android:padding="5sp"
                        android:text="34 AB 7089"
                        android:textAlignment="center"
                        android:textColor="#484849"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,NestedWeights,SpUsage" />


                    <TextView
                        android:id="@+id/main_item_car_type_and_tag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:drawableLeft="@mipmap/ic_car1_icon"
                        android:gravity="left|center_vertical"
                        android:text="Etiket"
                        android:textColor="#484849"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.45"
                        tools:ignore="UselessLeaf">

                        <ImageButton
                            android:id="@+id/imageButtonMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@mipmap/ic_menu_more"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    tools:ignore="DisableBaselineAlignment">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/main_item_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/calender_icon_2"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#000000" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.67"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text="Toplam Yol: "
                            android:textColor="#000000"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/main_item_total_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text=" 150 km"
                            android:textColor="#484849" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginRight="3sp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/main_item_max_speed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:drawableLeft="@mipmap/ic_high_speed"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:maxLines="1"
                        android:text=" 125 km/s"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,NestedWeights,RtlHardcoded" />


                    <TextView
                        android:id="@+id/main_item_avg_speed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:drawableLeft="@mipmap/ic_speed_icon"
                        android:gravity="left|center_vertical"
                        android:text="120 km/s"
                        android:textColor="#484849"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/monthly_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:src="@mipmap/ic_detail_icon" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonTrack"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:background="@drawable/raised_selector"
                        android:drawableLeft="@drawable/checkmark_true_blue"
                        android:gravity="left|center_vertical"
                        android:text=" Detay "
                        tools:ignore="ButtonStyle,HardcodedText,NestedWeights" />

                    <Button
                        android:id="@+id/buttonHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        android:layout_weight="0.5"
                        android:background="@drawable/raised_selector"
                        android:drawableLeft="@drawable/resume"
                        android:gravity="left|center_vertical"
                        android:text=" Haritada GÃ¶ster"
                        android:visibility="visible"
                        tools:ignore="ButtonStyle,HardcodedText" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>