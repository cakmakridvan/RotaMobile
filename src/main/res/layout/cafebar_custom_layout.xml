<?xml version="1.0" encoding="utf-8"?>

<!-- It's better to set root view width to wrap_content -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark_rota_transparence"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">


        <TextView
            android:id="@+id/vehicle_plate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1sp"
            android:layout_weight="0.6"
            android:background="@drawable/plate_border"
            android:padding="5sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,NestedWeights,SpUsage" />


        <TextView
            android:id="@+id/vehicle_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawableLeft="@mipmap/ic_car1_icon"
            android:gravity="left|center_vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/toplamhiz"
            android:gravity="center_vertical"
            android:text="HÄ±z :"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_address_icon" />

        <TextView
            android:id="@+id/cafebar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="fsdfsdfsd"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>